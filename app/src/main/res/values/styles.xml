<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.NoTitleBar">
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.TitleBar">
        <item name="windowNoTitle">false</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="WhiteRoundDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@drawable/dialog_white_bg</item>
        <item name="android:titleTextColor">@android:color/black</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="android:textColorSecondary">@color/colorAccent</item>
        <item name="android:textColorHighlight">@color/colorPrimaryDark</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="WhiteRoundCustomDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@drawable/dialog_white_bg</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="android:textColorSecondary">@color/colorAccent</item>
        <item name="android:textColorHighlight">@color/colorPrimaryDark</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="DialogBottomPopup" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_bottom_up_show</item>
        <item name="android:windowExitAnimation">@anim/dialog_bottom_down_hide</item>
    </style>

    <style name="DialogTopPopup" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/dialog_bottom_down_show</item>
        <item name="android:windowExitAnimation">@anim/dialog_bottom_up_hide</item>
    </style>

    <style name="DialogFadePopup" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/fade_show</item>
        <item name="android:windowExitAnimation">@anim/fade_hide</item>
    </style>

</resources>
